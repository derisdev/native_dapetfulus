<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/cardBackground">

    <androidx.appcompat.widget.Toolbar
        android:paddingTop="40dp"
        android:id="@+id/moretask_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="10dp">

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="27dp"
            android:layout_height="20dp"
            android:background="@drawable/menu"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Misi Lainnya"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_marginStart="35dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/coin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:layout_marginTop="7dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"/>


        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>


    <View
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/toolbar_dropshadow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Daily tasks"
        android:textColor="@android:color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardElevation="0dp"
        >

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/kalendar"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Misi Harian"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check-In Setiap Hari"
                android:layout_gravity="start"
                android:textColor="@color/textgrey"
                android:textSize="13sp"/>



        </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_gravity="end"
                android:backgroundTint="@color/amber"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+120 Free"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    />

            </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Misi Video"
        android:textColor="@android:color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardElevation="0dp"
        >

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/video"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="90dp"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tonton video\n(Jaringan 1)"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dapatkan koin untuk\nsetiap view"
                android:layout_gravity="start"
                android:textColor="@color/textgrey"
                android:textSize="13sp"/>



        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/colorPrimary"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+20"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        >

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/video2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="90dp"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tonton video\n(Jaringan 2)"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dapatkan koin untuk\nsetiap view"
                android:layout_gravity="start"
                android:textColor="@color/textgrey"
                android:textSize="13sp"/>



        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/colorPrimary"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+20"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Misi Pemula"
        android:textColor="@android:color/black"/>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardElevation="0dp">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               app:cardElevation="0dp"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:layout_marginStart="20dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginBottom="10dp"
                       android:layout_gravity="start|center"
                       android:background="@drawable/instagram"/>



                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="40dp"
                       android:text="Misi Instagram"
                       android:layout_gravity="center"
                       android:textSize="16sp"
                       android:textColor="@android:color/black"/>

               </LinearLayout>


               <androidx.cardview.widget.CardView
                   android:layout_width="80dp"
                   android:layout_height="35dp"
                   android:backgroundTint="@color/colorPrimary"
                   app:cardCornerRadius="18dp"
                   app:cardElevation="4dp"
                   android:layout_gravity="end|center"
                   android:layout_marginEnd="15dp"
                   android:foreground="?attr/selectableItemBackgroundBorderless"
                   android:clickable="true"
                   android:focusable="true"
                   >

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:text="+500"
                       android:textColor="@android:color/white"
                       android:textSize="13sp"
                       android:textStyle="bold"
                       />

               </androidx.cardview.widget.CardView>



           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               app:cardElevation="0dp"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:layout_marginStart="20dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginBottom="10dp"
                       android:layout_gravity="start|center"
                       android:background="@drawable/people"/>


                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="17dp"
                       android:layout_gravity="center"
                       android:layout_marginStart="40dp"
                       android:text="Undang Teman"
                       android:textColor="@android:color/black"
                       android:textSize="16sp" />

               </LinearLayout>


               <androidx.cardview.widget.CardView
                   android:layout_width="80dp"
                   android:layout_height="35dp"
                   android:backgroundTint="@color/colorPrimary"
                   app:cardCornerRadius="18dp"
                   app:cardElevation="4dp"
                   android:layout_gravity="end|center"
                   android:layout_marginEnd="15dp"
                   android:foreground="?attr/selectableItemBackgroundBorderless"
                   android:clickable="true"
                   android:focusable="true"
                   >

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:background="@drawable/ic_monetization_on"
                       android:backgroundTint="@android:color/white"/>

               </androidx.cardview.widget.CardView>



           </androidx.cardview.widget.CardView>

       </LinearLayout>


   </androidx.cardview.widget.CardView>






</LinearLayout>