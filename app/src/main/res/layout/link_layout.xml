<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/link_layout"
    android:layout_marginTop="50dp"
    app:cardCornerRadius="30dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:background="@drawable/gradient_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="-30dp"
                app:cardBackgroundColor="@color/greenAccent"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:padding="10dp"
                    android:text="1. Share Link dibawah pada temanmu lewat Sosial Media"
                    android:textColor="@android:color/white"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginEnd="-30dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/Blue"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:padding="10dp"
                    android:text="2. Ketika temanmu membuka aplikasi, kolom kode refferal akan terisi otomatis oleh kode refferal kamu"
                    android:textColor="@android:color/white"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="-30dp"
                app:cardBackgroundColor="@color/greenAccent"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:padding="10dp"
                    android:text="3. Temanmu akan mendapat 500 koin setelah berhasil mendaftar"
                    android:textColor="@android:color/white"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginEnd="-30dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/Blue"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:padding="10dp"
                    android:text="4. Kamu selamanya mendapat 10% dari hasil misi temanmu di beranda"
                    android:textColor="@android:color/white"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="20dp"
                android:background="@drawable/invite_card_background"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Link Undangan Anda"
                        android:layout_gravity="center"
                        android:textColor="@android:color/holo_blue_light"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"/>

                    <TextView
                        android:id="@+id/link_refferal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:longClickable="true"
                        android:layout_gravity="center"
                        android:text="@string/link"
                        android:textColor="@android:color/holo_blue_light"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/whatsapp_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:elevation="7dp"
                    android:layout_marginBottom="3dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="20dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/whatsapp" />

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="WhatsApp"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/other_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/Blue"
                    android:elevation="7dp"
                    android:layout_marginBottom="3dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_share"/>

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lainnya"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"/>




        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</androidx.cardview.widget.CardView>